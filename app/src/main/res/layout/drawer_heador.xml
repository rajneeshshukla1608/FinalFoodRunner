<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#FF5447">

    <ImageView
        android:id="@+id/heador_img"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:src="@drawable/heador_img2" />

    <TextView
        android:id="@+id/heador_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/heador_img"
        android:text="@string/higher_order_functionality"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

    <TextView
        android:layout_below="@+id/heador_txt"
        android:layout_marginLeft="25dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/higher_order_functionality"
        android:textColor="#ffffff"
        />
</RelativeLayout>