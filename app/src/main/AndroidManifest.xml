<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.FinalFoodRunner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/restaurant_app_icon"
        android:resizeableActivity="false"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/restaurant_app_icon_round"

        android:supportsRtl="true"
        android:theme="@style/Theme.FoodRunner2">
        <activity android:name=".activity.OrderPlaced"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            ></activity>
        <activity android:name=".activity.ResetPassword"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".activity.ForgotPassword"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".activity.Registor"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".activity.SplashScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RestaurantMenu"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>